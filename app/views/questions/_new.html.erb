<%= form_for :question, url: questions_path,  :html => {:class => "question"} do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit :class => "new_form question" %>
  </p>
<% end %>
