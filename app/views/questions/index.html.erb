<h1>Questions</h1>
<%= @quote.quote %>
<%= render "new" %>
<%= content_tag_for(:li, @questions) do |question| %>

  <strong><%= link_to question.title, question_path(question) %></strong>-
  <%= question.content %>

  <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
  <%= link_to 'Edit', edit_question_path(question) %>
  Total Votes:<div class="total_votes"> <%= question.votes %></div>
  <%= button_to 'Upvote', question_path(question, question: {votes: (question.votes + 1)}), method: :put%>
  <%= button_to 'Downvote', question_path(question, question: {votes: (question.votes - 1)}), method: :put%>
<% end %>

