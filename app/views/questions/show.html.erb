<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<p>
  Total Votes:<%= @question.votes %>
</p>
<div class="answers">
<%  @answers.each do |answer|%>
  <li id="<%= answer.id %>">
    <%= answer.title %>
    <%= answer.content %>
    Total Votes:  <div class="total_votes"> <%= answer.votes %> </div>
      <%= button_tag 'upvote', :class => "upvote vote answer"%>
    <%= button_tag 'downvote', :class => "downvote vote answer"%>
  </li>
<% end %>
<%= render "answers/new"%>
</div>
<%= link_to 'Back', questions_path %>
<script type="text/x-handlebars-template" class="question_template">
  <div id = {{answer.id}}>
    {{answer.title}}
    {{answer.content}}
    <div class="total_votes"> {{answer.votes}} </div>
    <button type="button" class="upvote vote answer">Upvote</button>
    <button type="button" class="downvote vote answer">Downvote</button>
  </div>
</script>
